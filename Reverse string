1. Reverse all characters in a string

#include <iostream>

using namespace std;

int main()
{
   string s = "Apurva is good";
   
   int length = s.length();
   cout<<length<<endl;

   for(int i=length; i>=0; i--)
   { 
       cout<<s[i];
   }

    return 0;
}


